<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="editors">
	<name>plg_editors_emmet</name>
	<version>1.0</version>
	<creationDate>18 June 2013</creationDate>
	<author>Rezerford, Paul Radzkov</author>
	<authorEmail>N/A</authorEmail>
	<authorUrl>paulradzkov.com</authorUrl>
	<copyright></copyright>
	<license></license>
	<description>PLG_EMMET_XML_DESCRIPTION</description>
	<files>
		<filename plugin="emmet">emmet.php</filename>
		<filename>index.html</filename>
		<filename>js/index.html</filename>
		<filename>js/basefiles.js</filename>
		<filename>js/basefiles-uncompressed.js</filename>
		<filename>js/editor.js</filename>
		<filename>js/emmet.js</filename>
		<filename>js/emmet.min.js</filename>
		<filename>js/codemirror/index.html</filename>
		<filename>js/codemirror/clike.js</filename>
		<filename>js/codemirror/codemirror.css</filename>
		<filename>js/codemirror/codemirror.js</filename>
		<filename>js/codemirror/css.js</filename>
		<filename>js/codemirror/htmlmixed.js</filename>
		<filename>js/codemirror/javascript.js</filename>
		<filename>js/codemirror/php.js</filename>
		<filename>js/codemirror/xml.js</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_editors_emmet.ini</language>
		<language tag="en-GB">en-GB.plg_editors_emmet.sys.ini</language>
	</languages>
	<config>
		<fields name="params">

			<fieldset name="basic">
				<field name="linenumbers" type="radio"
					default="0"
					description="PLG_EMMET_FIELD_LINENUMBERS_DESC"
					label="PLG_EMMET_FIELD_LINENUMBERS_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>

				<field name="tabmode" type="radio"
					default="indent"
					description="PLG_EMMET_FIELD_TABMODE_DESC"
					label="PLG_EMMET_FIELD_TABMODE_LABEL"
				>
					<option value="indent">PLG_EMMET_FIELD_VALUE_TABMODE_INDENT</option>
					<option value="shift">PLG_EMMET_FIELD_VALUE_TABMODE_SHIFT</option>
				</field>
			</fieldset>

		</fields>
	</config>
</extension>
